{
  "name": "mcpith",
  "version": "0.1.0",
  "description": "Transparent MCP proxy that compresses large tool responses for resource-constrained local models",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcpith": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsup",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "proxy",
    "compression",
    "llm",
    "context"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@ai-sdk/openai-compatible": "^2.0.2",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "ai": "^6.0.5",
    "ai-tokenizer": "^1.0.6",
    "express": "^5.2.1",
    "winston": "^3.19.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
