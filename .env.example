# Required - Compression API
COMPRESSION_API_BASE_URL=https://api.groq.com/openai/v1
COMPRESSION_API_KEY=your-api-key

# Optional - Compression Settings
COMPRESSION_MODEL=llama-3.1-8b-instant
COMPRESSION_THRESHOLD_TOKENS=1500
COMPRESSION_TARGET_TOKENS=500
COMPRESSION_MAX_INPUT_TOKENS=8000
COMPRESSION_TIMEOUT_MS=30000

# Optional - Server Settings
DOWNSTREAM_TRANSPORT=sse
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=info

# Optional - Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100

# Optional - Behavior
PASSTHROUGH_ON_ERROR=true

# Optional - Config File
MCPITH_CONFIG=./mcpith.config.json
